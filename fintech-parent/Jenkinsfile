
pipeline {
    agent any
    tools {
        maven 'mvn3_9_7'
        jdk 'jdk17'
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }

        stage ('Build') {
            steps {
                sh 'mvn -f fintech-parent/pom.xml -B -DskipTests clean package -Pjenkins' 
            }
            post {
                success {
                    sh 'echo build done successfuly' 
                }
            }
        }
        
         stage ('install') {
            steps {
                sh 'mvn -f fintech-parent/pom.xml -B -DskipTests deploy -Pjenkins' 
            }
            post {
                success {
                    sh 'echo deploy done successfuly' 
                }
            }
        }
        
    }
}