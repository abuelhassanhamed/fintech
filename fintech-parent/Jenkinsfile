pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'maven -B -DskipTests clean package'
            }
        }
        stage('Test') { 
            steps {
                sh 'maven test' 
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml' 
                }
            }
        }
    }
}