pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh '#!/bin/bash mvn -B -DskipTests clean package'
            }
        }
        stage('Test') { 
            steps {
                sh '#!/bin/bash mvn test' 
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml' 
                }
            }
        }
    }
}